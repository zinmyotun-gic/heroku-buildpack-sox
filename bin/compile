#!/bin/sh

indent() {
  sed -u 's/^/       /'
}

echo "-----> Install sox"
BUILD_DIR=$1
VENDOR_DIR="vendor"
DOWNLOAD_URL="https://github.com/zinmyotun-gic/heroku-buildpack-sox/blob/master/sox-14.4.1.tar.gz"

echo "DOWNLOAD_URL = " $DOWNLOAD_URL | indent

cd $BUILD_DIR
mkdir -p $VENDOR_DIR
cd $VENDOR_DIR
curl -L --silent $DOWNLOAD_URL | tar xz
cd sox-14.4.1
./configure
make -s && make install

echo "exporting PATH and LIBRARY_PATH" | indent
PROFILE_PATH="$BUILD_DIR/.profile.d/sox.sh"
mkdir -p $(dirname $PROFILE_PATH)
echo 'export PATH="$PATH:vendor/sox-14.4.1/src"' >> $PROFILE_PATH
echo 'export LD_LIBRARY_PATH="$LD_LIBRARY_PATH:vendor/sox-14.4.1/src/.libs"' >> $PROFILE_PATH
